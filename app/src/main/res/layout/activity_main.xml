<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51FEB5"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:background="#6AFD89"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/mydevice"></ImageView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="мое смарт устройство"
            android:layout_marginLeft="10dp">
            ></TextView>>
    </LinearLayout>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="110dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/point"></ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:text="1,3 km"
            android:layout_marginLeft="150dp">
            ></TextView>>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="210dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/fire"></ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:text="59 kcal"
            android:layout_marginLeft="150dp">
            ></TextView>>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="310dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/time"></ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:text="30 min"
            android:layout_marginLeft="150dp">
            ></TextView>>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="410dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076"
        android:onClick="onClickStepsActivity">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/reverse"></ImageView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:text="1583 step"
            android:layout_marginLeft="140dp">
            ></TextView>>
    </LinearLayout>>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="510dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076"
        android:onClick="step"
        android:layout_marginRight="185dp">
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/sids"></ImageView>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-65dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/graphics"
            >
        </ImageView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:text="62 kg"
            android:layout_marginLeft="-70dp">
            ></TextView>>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="510dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076"
        android:onClick="step"
        android:layout_marginLeft="185dp">
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/heart"></ImageView>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-52dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/grafic"
            >
        </ImageView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:text="82 bmp"
            android:layout_marginLeft="-70dp">
            ></TextView>>

    </LinearLayout>>
</androidx.constraintlayout.widget.ConstraintLayout>